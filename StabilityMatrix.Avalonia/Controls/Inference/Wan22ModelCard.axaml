<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:StabilityMatrix.Avalonia.Controls"
    xmlns:converters="clr-namespace:StabilityMatrix.Avalonia.Converters"
    xmlns:fluent="clr-namespace:FluentIcons.Avalonia.Fluent;assembly=FluentIcons.Avalonia.Fluent"
    xmlns:inference="clr-namespace:StabilityMatrix.Avalonia.ViewModels.Inference"
    xmlns:lang="clr-namespace:StabilityMatrix.Avalonia.Languages"
    xmlns:mocks="clr-namespace:StabilityMatrix.Avalonia.DesignData"
    xmlns:sg="clr-namespace:SpacedGridControl.Avalonia;assembly=SpacedGridControl.Avalonia"
    xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
    x:DataType="inference:Wan22ModelCardViewModel">
    <Design.PreviewWith>
        <Panel Width="400" Height="400">
            <controls:Wan22ModelCard DataContext="{x:Static mocks:DesignData.Wan22ModelCardViewModel}" />
        </Panel>
    </Design.PreviewWith>

    <Styles.Resources>
        <fluent:SymbolIconSource
            x:Key="IconCube"
            IconVariant="Filled"
            Symbol="Cube" />
        <fluent:SymbolIconSource
            x:Key="IconQuestionCircle"
            IconVariant="Filled"
            Symbol="QuestionCircle" />
        <fluent:SymbolIconSource
            x:Key="IconTableCellEdit"
            IconVariant="Filled"
            Symbol="TableCellEdit" />
    </Styles.Resources>

    <Style Selector="controls|Wan22ModelCard">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Template">
            <ControlTemplate>
                <controls:Card Padding="12">
                    <sg:SpacedGrid
                        ColumnDefinitions="Auto,*"
                        ColumnSpacing="8"
                        RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                        RowSpacing="9">

                        <!--  HIGH Model  -->
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="High Model"
                            TextAlignment="Left" />
                        <controls:BetterComboBox
                            Grid.Row="0"
                            Grid.Column="1"
                            Padding="8,6,4,6"
                            HorizontalAlignment="Stretch"
                            ItemsSource="{Binding ClientManager.UnetModels}"
                            SelectedItem="{Binding SelectedModelHigh}"
                            Theme="{StaticResource BetterComboBoxHybridModelTheme}" />

                        <!--  LOW Model  -->
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,8,0,0"
                            VerticalAlignment="Center"
                            Text="Low Model"
                            TextAlignment="Left" />
                        <controls:BetterComboBox
                            Grid.Row="1"
                            Grid.Column="1"
                            Padding="8,6,4,6"
                            HorizontalAlignment="Stretch"
                            IsTextSearchEnabled="True"
                            ItemsSource="{Binding ClientManager.UnetModels}"
                            SelectedItem="{Binding SelectedModelLow}"
                            Theme="{StaticResource BetterComboBoxHybridModelTheme}" />

                        <!--  Precision  -->
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="0,8,0,0"
                            VerticalAlignment="Center"
                            Text="Precision" />
                        <ui:FAComboBox
                            Grid.Row="2"
                            Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            ItemsSource="{Binding WeightDTypes}"
                            SelectedItem="{Binding SelectedDType}" />

                        <!--  VAE  -->
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="{x:Static lang:Resources.Label_VAE}" />
                        <ui:FAComboBox
                            Grid.Row="3"
                            Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            DisplayMemberBinding="{Binding ShortDisplayName}"
                            ItemsSource="{Binding ClientManager.VaeModels}"
                            SelectedItem="{Binding SelectedVae}" />

                        <!--  CLIP  -->
                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="Text Encoder" />
                        <controls:BetterDownloadableComboBox
                            Grid.Row="4"
                            Grid.Column="1"
                            ItemsSource="{Binding ClientManager.ClipModels}"
                            SelectedItem="{Binding SelectedClipModel}"
                            Theme="{StaticResource BetterComboBoxHybridModelTheme}" />

                        <!-- CLIP Vision
                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="CLIP Vision" />
                        <controls:BetterDownloadableComboBox
                            Grid.Row="5"
                            Grid.Column="1"
                            ItemsSource="{Binding ClientManager.ClipVisionModels}"
                            SelectedItem="{Binding SelectedClipVisionModel}"
                            Theme="{StaticResource BetterComboBoxHybridModelTheme}" />-->

                        <!--  Shift  -->
                        <TextBlock
                            Grid.Row="6"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="Shift" />
                        <ui:NumberBox
                            Grid.Row="6"
                            Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            Value="{Binding Shift}" />

                        <!--  Extra Networks  -->
                        <TextBlock
                            Grid.Row="7"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="LoRAs"
                            TextAlignment="Left" />
                        <Expander
                            Grid.Row="7"
                            Grid.Column="1"
                            MinHeight="0"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Center"
                            CornerRadius="18"
                            ExpandDirection="Down"
                            Header="LoRAs (High Model)"
                            IsExpanded="{Binding ExtraNetworksHIsExpanded, Mode=TwoWay}">

                            <controls:StackEditableCard Margin="0,0,8,0" DataContext="{Binding ExtraNetworksHighStack}" />
                        </Expander>

                        <!--  Extra Networks  -->
                        <TextBlock
                            Grid.Row="8"
                            Grid.Column="0"
                            Margin="0,8,0,0"
                            VerticalAlignment="Center"
                            Text=""
                            TextAlignment="Left" />
                        <Expander
                            Grid.Row="8"
                            Grid.Column="1"
                            MinHeight="0"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Center"
                            CornerRadius="18"
                            ExpandDirection="Down"
                            Header="LoRAs (Low Model)"
                            IsExpanded="{Binding ExtraNetworksLIsExpanded, Mode=TwoWay}">

                            <controls:StackEditableCard Margin="0,0,8,0" DataContext="{Binding ExtraNetworksLowStack}" />
                        </Expander>
                    </sg:SpacedGrid>
                </controls:Card>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>