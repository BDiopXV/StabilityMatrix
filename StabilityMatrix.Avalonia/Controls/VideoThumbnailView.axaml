<UserControl
    x:Class="StabilityMatrix.Avalonia.Controls.VideoThumbnailView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:StabilityMatrix.Avalonia.Controls"
    xmlns:vendorLabs="clr-namespace:StabilityMatrix.Avalonia.Controls.VendorLabs"
    xmlns:vlc="clr-namespace:LibVLCSharp.Avalonia;assembly=LibVLCSharp.Avalonia"
    x:Name="Root"
    x:DataType="controls:VideoThumbnailView">

    <Border ClipToBounds="True" CornerRadius="4">
        <Grid>
            <!--  Static preview image shown when not hovering  -->
            <vendorLabs:BetterAsyncImage
                x:Name="PART_PreviewImage"
                IsVisible="{Binding !IsHovering, ElementName=Root}"
                Source="{Binding PreviewUri, ElementName=Root}"
                Stretch="UniformToFill" />

            <!--  Video player shown when hovering  -->
            <vlc:VideoView
                x:Name="PART_VideoView"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                IsVisible="{Binding IsHovering, ElementName=Root}" />
        </Grid>
    </Border>
</UserControl>
